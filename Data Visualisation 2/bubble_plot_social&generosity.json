{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 400,
  "height": 300,
  "title": "Social Support against Generosity (2020)",
  "data": {
    "url": "https://raw.githubusercontent.com/dunyongtan/FIT3179/main/Choropleth_map/data/2020.csv"
  },
  "layer": [
    {
      "mark": "point",
      "encoding": {
        "size": {
          "field": "LoggedGDPpercapita",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [6, 7, 8, 9, 10, 11],
            "range": [5, 50, 150, 300, 450, 600, 800]
          },
          "legend": {"format": ".1f", "title": "GDP (per capita)"}
        },
        "color": {
          "condition": {
            "test": "datum.Country == 'Afghanistan'",
            "value": "#2a3b90"
          },
          "value": "grey"
        },
        "opacity": {
          "condition": {"test": "datum.Country == 'Afghanistan'", "value": 0.8},
          "value": 0.2
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "fontStyle": "italic",
        "fontWeight": "bold",
        "fontSize": 12.5,
        "align": "right",
        "baseline": "middle",
        "dx": -15
      },
      "transform": [{"filter": "datum.Countryn == 'Afghanistan'"}],
      "encoding": {"text": {"field": "Country"}}
    }
  ],
  "encoding": {
    "x": {
      "field": "Generosity",
      "type": "quantitative",
      "title": "Generosity",
      "scale": {"type": "linear", "domain": [-0.4, 0.6]}
    },
    "y": {
      "field": "Social support",
      "type": "quantitative",
      "title": "Social support",
      "scale": {"type": "linear", "domain": [0.3, 1]}
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {
        "field": "Social support",
        "type": "quantitative",
        "format": ".1f",
        "title": "Social Support"
      },
      {
        "field": "Generosity",
        "type": "quantitative",
        "format": ".1f",
        "title": "Generosity"
      },
      {
        "field": "LoggedGDPpercapita",
        "type": "quantitative",
        "format": ".2f",
        "title": "GDP (per capita)"
      }
    ]
  },
  "config": {}
}