{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Happiness Score as of 2020",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://github.com/dunyongtan/Homework-9/blob/main/Choropleth_map/Js/ne_110m.json",
    "format": {
          "type": "topojson",
          "feature": "ne_110m"
        }
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://github.com/dunyongtan/Homework-9/blob/main/Choropleth_map/data/2020_Happiness_Report.csv"
        },
        "key": "Country",
        "fields": ["Ladder score"]
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Happiness Score",
      "type": "quantitative",
      "scale": {"type": "linear"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Ladder score", "type": "quantitative"}
    ]
  }

}
