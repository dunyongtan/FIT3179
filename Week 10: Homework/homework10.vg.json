{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "height": 600,
  "title": {
    "text": "GDP per capita and Happiness Score by country",
    "frame": "group"
  },
  "style": "cell",
  "data": [
    {"name": "region_select_store"},
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/dunyongtan/Homework-9/main/Choropleth_map/data/2020_Happiness_Report.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "filter",
          "expr": "isValid(datum[\"HappinessScore\"]) && isFinite(+datum[\"HappinessScore\"]) && isValid(datum[\"LoggedGDPpercapita\"]) && isFinite(+datum[\"LoggedGDPpercapita\"]) && isValid(datum[\"Healthy life expectancy\"]) && isFinite(+datum[\"Healthy life expectancy\"])"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "filter",
          "expr": "isValid(datum[\"HappinessScore\"]) && isFinite(+datum[\"HappinessScore\"]) && isValid(datum[\"LoggedGDPpercapita\"]) && isFinite(+datum[\"LoggedGDPpercapita\"])"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "unit",
      "value": {},
      "on": [
        {"events": "mousemove", "update": "isTuple(group()) ? group() : unit"}
      ]
    },
    {
      "name": "region_select_Region_legend",
      "value": null,
      "on": [
        {
          "events": [
            {
              "source": "view",
              "type": "click",
              "markname": "Region_legend_symbols"
            },
            {
              "source": "view",
              "type": "click",
              "markname": "Region_legend_labels"
            },
            {
              "source": "view",
              "type": "click",
              "markname": "Region_legend_entries"
            }
          ],
          "update": "datum.value || item().items[0].items[0].datum.value",
          "force": true
        },
        {
          "events": [{"source": "view", "type": "click"}],
          "update": "!event.item || !datum ? null : region_select_Region_legend",
          "force": true
        }
      ]
    },
    {
      "name": "region_select",
      "update": "vlSelectionResolve(\"region_select_store\", \"union\", true)"
    },
    {
      "name": "region_select_tuple",
      "update": "region_select_Region_legend !== null ? {fields: region_select_tuple_fields, values: [region_select_Region_legend]} : null"
    },
    {
      "name": "region_select_tuple_fields",
      "value": [{"type": "E", "field": "Region"}]
    },
    {
      "name": "region_select_toggle",
      "value": false,
      "on": [
        {
          "events": {"merge": [{"source": "view", "type": "click"}]},
          "update": "event.shiftKey"
        }
      ]
    },
    {
      "name": "region_select_modify",
      "on": [
        {
          "events": {"signal": "region_select_tuple"},
          "update": "modify(\"region_select_store\", region_select_toggle ? null : region_select_tuple, region_select_toggle ? null : true, region_select_toggle ? region_select_tuple : null)"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "symbol",
      "style": ["circle"],
      "interactive": true,
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "opacity": [
            {
              "test": "!(length(data(\"region_select_store\"))) || (vlSelectionTest(\"region_select_store\", datum))",
              "value": 0.6
            },
            {"value": 0.2}
          ],
          "fill": {"scale": "color", "field": "Region"},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"Happiness Score\": format(datum[\"HappinessScore\"], \"\"), \"GDP(per capita)\": format(datum[\"LoggedGDPpercapita\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "circle"},
          "description": {
            "signal": "\"HappinessScore: \" + (format(datum[\"HappinessScore\"], \"\")) + \"; LoggedGDPpercapita: \" + (format(datum[\"LoggedGDPpercapita\"], \"\")) + \"; Healthy life expectancy: \" + (format(datum[\"Healthy life expectancy\"], \".1s\")) + \"; Region: \" + (isValid(datum[\"Region\"]) ? datum[\"Region\"] : \"\"+datum[\"Region\"]) + \"; Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; Happiness Score: \" + (format(datum[\"HappinessScore\"], \"\")) + \"; GDP(per capita): \" + (format(datum[\"LoggedGDPpercapita\"], \"\"))"
          },
          "x": {"scale": "x", "field": "HappinessScore"},
          "y": {"scale": "y", "field": "LoggedGDPpercapita"},
          "size": {"scale": "size", "field": "Healthy life expectancy"},
          "shape": {"value": "circle"}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "text",
      "style": ["text"],
      "interactive": true,
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "align": {"value": "left"},
          "baseline": {"value": "middle"},
          "dx": {"value": 12},
          "fontSize": {"value": 11},
          "fontStyle": {"value": "italic"},
          "fill": {"value": "black"},
          "opacity": [
            {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
              "value": 1
            },
            {"value": 0}
          ],
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"Happiness Score\": isValid(datum[\"HappinessScore\"]) ? datum[\"HappinessScore\"] : \"\"+datum[\"HappinessScore\"], \"GDP (per capita)\": format(datum[\"LoggedGDPpercapita\"], \"\")}"
          },
          "description": {
            "signal": "\"HappinessScore: \" + (format(datum[\"HappinessScore\"], \"\")) + \"; LoggedGDPpercapita: \" + (format(datum[\"LoggedGDPpercapita\"], \"\")) + \"; Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; Happiness Score: \" + (isValid(datum[\"HappinessScore\"]) ? datum[\"HappinessScore\"] : \"\"+datum[\"HappinessScore\"]) + \"; GDP (per capita): \" + (format(datum[\"LoggedGDPpercapita\"], \"\"))"
          },
          "x": {"scale": "x", "field": "HappinessScore"},
          "y": {"scale": "y", "field": "LoggedGDPpercapita"},
          "text": {
            "signal": "isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "data_0", "field": "HappinessScore"},
          {"data": "data_1", "field": "HappinessScore"}
        ]
      },
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "data_0", "field": "LoggedGDPpercapita"},
          {"data": "data_1", "field": "LoggedGDPpercapita"}
        ]
      },
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "data_0", "field": "Region", "sort": true},
      "range": "category"
    },
    {
      "name": "size",
      "type": "threshold",
      "domain": [40, 45, 50, 55, 60, 65, 70, 75],
      "range": {
        "signal": "sequence(9, 361 + (361 - 9) / (9 - 1), (361 - 9) / (9 - 1))"
      }
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "tickCount": 7,
      "gridScale": "y",
      "grid": true,
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "tickCount": 7,
      "gridScale": "x",
      "grid": true,
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "HappinessScore",
      "tickCount": 7,
      "labelFlush": true,
      "labelOverlap": true,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "LoggedGDPpercapita",
      "tickCount": 7,
      "labelOverlap": true,
      "zindex": 0
    }
  ],
  "legends": [
    {
      "fill": "color",
      "symbolType": "circle",
      "title": "Region",
      "encode": {
        "labels": {
          "name": "Region_legend_labels",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "(!length(data(\"region_select_store\")) || (region_select[\"Region\"] && indexof(region_select[\"Region\"], datum.value) >= 0))",
                "value": 1
              },
              {"value": 0.35}
            ]
          }
        },
        "symbols": {
          "name": "Region_legend_symbols",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "(!length(data(\"region_select_store\")) || (region_select[\"Region\"] && indexof(region_select[\"Region\"], datum.value) >= 0))",
                "value": 0.6
              },
              {"value": 0.35}
            ]
          }
        },
        "entries": {
          "name": "Region_legend_entries",
          "interactive": true,
          "update": {"fill": {"value": "transparent"}}
        }
      }
    },
    {
      "format": ".1s",
      "size": "size",
      "labelOverlap": "greedy",
      "symbolType": "circle",
      "title": "Healthy life expectancy",
      "encode": {
        "symbols": {
          "update": {
            "fill": {"value": "black"},
            "fillOpacity": {"value": 0.6},
            "opacity": {"value": 0.6},
            "stroke": {"value": "transparent"}
          }
        }
      }
    }
  ],
  "config": {}
}